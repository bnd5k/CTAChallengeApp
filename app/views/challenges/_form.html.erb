<%= form_for @challenge, :html => { :class => 'form-horizontal' } do |f| %>
  <%= render 'shared/error_messages', :object => f.object %>

  <div class="control-group">
    <%= f.label :date, :class => 'control-label' %>
    <div class="controls">
      <%= f.date_select :date, :class => 'date_select' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :duration, :class => 'control-label' %>
    <div class="controls">
      <%= f.time_select :duration, :class => 'time_select' %>
    </div>
  </div>
  <%= f.fields_for :user  do |ff| %>

    <div class="control-group">
      <%= label_tag 'user[name]', 'Name',:class => 'control-label' %>
      <div class="controls">
        <%= text_field_tag 'user[name]', '',  :class => 'text_field' %>
      </div>
    </div>

    <div class="control-group">
      <%= label_tag  'user[email]', 'Email',  :class => 'control-label' %>
      <div class="controls">
        <%= text_field_tag 'user[email]', '',  :class => 'text_field' %>
      </div>
    </div>
  <% end %>

  <div class="form-actions">
    <%= f.submit "Log it!", :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
      challenges_path, :class => 'btn' %>
    </div>
  <% end %>
